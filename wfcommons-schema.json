{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "title": "WfFormat",
  "properties": {
    "name": {
      "description": "Workflow instance name",
      "type": "string",
      "minLength": 1
    },
    "description": {
      "description": "General description of the instance",
      "type": "string",
      "minLength": 1
    },
    "createdAtTime": {
      "description": "Instance creation timestamp",
      "type": "string",
      "minLength": 1,
      "format": "date-time"
    },
    "schemaVersion": {
      "description": "Version of the schema used",
      "type": "string",
      "enum": [
        "1.0",
        "1.1",
        "1.2",
        "1.3",
        "2.0"
      ]
    }
  },
  "author": {
    "type": "object",
    "properties": {
      "name": {
        "description": "Author name",
        "type": "string",
        "minLength": 1
      },
      "email": {
        "description": "Author email",
        "type": "string",
        "minLength": 1,
        "format": "email"
      },
      "institution": {
        "description": "Author institution",
        "type": "string",
        "minLength": 1
      },
      "country": {
        "description": "Author country",
        "type": "string",
        "minLength": 1
      }
    },
    "required": [
      "name",
      "email"
    ]
  },
  "workflow": {
    "type": "object",
    "properties": {
      "tasks": {
        "description": "Sets of workflow tasks",
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "description": "Task name",
              "type": "string",
              "minLength": 1
            },
            "id": {
              "description": "Task ID",
              "type": "string",
              "minLength": 1
            },
            "category": {
              "description": "Task category",
              "type": "string",
              "minLength": 1
            },
            "type": {
              "description": "Task type (whether it is a compute or an auxiliary task)",
              "type": "string",
              "enum": [
                "compute",
                "transfer",
                "auxiliary"
              ]
            },
            "command": {
              "description": "Task command description",
              "type": "object",
              "properties": {
                "program": {
                  "description": "Program name",
                  "type": "string",
                  "minLength": 1
                },
                "arguments": {
                  "description": "Sets of task arguments",
                  "type": "array",
                  "items": {
                    "description": "A task argument",
                    "type": "string",
                    "minLength": 1
                  }
                }
              }
            },
            "parents": {
              "description": "Sets of parent tasks",
              "type": "array",
              "items": {
                "type": "string",
                "description": "Id of the parent task",
                "minLength": 1,
                "pattern": "^[0-9a-zA-Z-_.]*$"
              }
            },
            "files": {
              "description": "Sets of input/output data",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "description": "A human-readable name for the file",
                    "type": "string",
                    "minLength": 1
                  },
                  "sizeInKB": {
                    "description": "File size in KB",
                    "type": "integer",
                    "minimum": 0
                  },
                  "link": {
                    "description": "Whether it is an input or output data",
                    "type": "string",
                    "enum": [
                      "input",
                      "output"
                    ]
                  }
                },
                "required": [
                  "name",
                  "size",
                  "link"
                ]
              }
            },
            "runtime": {
              "description": "Task runtime in seconds",
              "type": "number"
            },
            "cores": {
              "description": "Number of cores required by the task",
              "type": "number",
              "minimum": 1
            },
            "avgCPU": {
              "description": "Average CPU utilization in %",
              "type": "number"
            },
            "bytesRead": {
              "description": "Total bytes read in KB",
              "type": "number"
            },
            "bytesWritten": {
              "description": "Total bytes written in KB",
              "type": "number"
            },
            "memory": {
              "description": "Memory (resident set) size of the process in KB",
              "type": "number"
            },
            "energy": {
              "description": "Total energy consumption in kWh",
              "type": "number"
            },
            "avgPower": {
              "description": "Average power consumption in W",
              "type": "number"
            },
            "priority": {
              "description": "Task priority",
              "type": "number"
            },
            "machine": {
              "description": "Machine name used",
              "type": "string",
              "minLength": 1
            }
          },
          "required": [
            "name",
            "type"
          ]
        }
      }
    },
    "required": [
      "makespan",
      "executedAt",
      "tasks"
    ]
  },
  "execution": {
    "type": "object",
    "properties": {
      "executedAtTime": {
        "description": "Workflow start execution timestamp",
        "type": "string",
        "minLength": 1,
        "format": "date-time"
      },
      "makespanInSecond": {
        "description": "Workflow makespan in second",
        "type": "number"
      },
      "WorkflowManagementSystem": {
        "type": "object",
        "properties": {
          "name": {
            "description": "WMS name",
            "type": "string",
            "minLength": 1
          },
          "version": {
            "description": "WMS version",
            "type": "string",
            "minLength": 1
          },
          "url": {
            "description": "WMS url",
            "type": "string",
            "minLength": 1,
            "format": "uri"
          }
        },
        "required": [
          "name",
          "version"
        ]
      },
      "machines": {
        "description": "Sets of machines used for workflow tasks",
        "type": "array",
        "minItems": 1,
        "items": {
          "description": "Description of a machine (compute node)",
          "type": "object",
          "properties": {
            "system": {
              "description": "Machine system",
              "type": "string",
              "enum": [
                "linux",
                "macos",
                "windows"
              ]
            },
            "architecture": {
              "description": "Machine architecture",
              "type": "string",
              "minLength": 1
            },
            "nodeName": {
              "description": "Machine node name",
              "type": "string",
              "format": "hostname",
              "minLength": 1
            },
            "release": {
              "description": "Machine release",
              "type": "string",
              "minLength": 1
            },
            "memory": {
              "description": "Total machine's RAM memory in KB",
              "type": "integer",
              "minimum": 1
            },
            "cpu": {
              "description": "Machine's CPU information",
              "type": "object",
              "properties": {
                "count": {
                  "description": "Number of CPU cores",
                  "type": "integer",
                  "minimum": 1
                },
                "speed": {
                  "description": "CPU speed in MHz",
                  "type": "integer",
                  "minimum": 1
                },
                "vendor": {
                  "description": "CPU vendor",
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          },
          "required": [
            "nodeName"
          ]
        }
      },
      "taskExecutions": {
        "tasks": {
          "description": "Sets of workflow task executions",
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "description": "Task ID",
                "type": "string",
                "minLength": 1
              },
              "runtime": {
                "description": "Task runtime in seconds",
                "type": "number"
              },
              "cores": {
                "description": "Number of cores used to run the task",
                "type": "number",
                "minimum": 1
              },
              "avgCPUUtilization": {
                "description": "Average CPU utilization in %",
                "type": "number"
              },
              "dataReadInKB": {
                "description": "Total bytes read in KB from files",
                "type": "number"
              },
              "dataWrittenInKB": {
                "description": "Total bytes written in KB to files",
                "type": "number"
              },
              "memoryInKB": {
                "description": "Maximum Resident Set Size of the process in KB",
                "type": "number"
              },
              "energyInkWh": {
                "description": "Total energy consumption in kWh",
                "type": "number"
              },
              "avgPowerInW": {
                "description": "Average power consumption in W",
                "type": "number"
              },
              "nodeName": {
                "description": "Machine that executed that task",
                "type": "string",
                "minLength": 1
              }
            }
        }
    }
  },
  "required": [
    "name",
    "schemaVersion",
    "workflow"
  ]
}
